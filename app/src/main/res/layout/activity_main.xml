<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F5773">

        <LinearLayout
            android:id="@+id/main_LAY_firstPlayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_player1_LBL_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3F5773"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:padding="8dp"
                android:text="0"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_player1_LBL_result"
                android:adjustViewBounds="true"
                android:maxWidth="130dp"
                android:maxHeight="130dp"
                android:scaleType="fitCenter"
                android:src="@drawable/user_boy" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_LAY_gameBord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_toLeftOf="@+id/main_LAY_secondPlayer"
            android:layout_toRightOf="@+id/main_LAY_firstPlayer"
            >

            <LinearLayout
                android:id="@+id/main_LAY_cards_container"
                android:layout_centerVertical="true"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
               <ImageView
                   android:id="@+id/main_IMG_VIEW_player1_card"
                   android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/diamond_red_5">
               </ImageView>

                <ImageView
                    android:id="@+id/main_IMG_VIEW_player2_card"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/diamond_red_5">
                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_LAY_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/main_LAY_cards_container">


                <ImageButton
                    android:id="@+id/main_BTN_startGame"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/video_player"
                    android:maxWidth="80dp"
                    android:maxHeight="80dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp"
                    />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_LAY_secondPlayer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/main_player2_LBL_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#3F5773"
                android:textColor="@color/black"
                android:textSize="60dp"
                android:padding="8dp"
                android:text="0"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="130dp"
                android:maxHeight="130dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/main_player2_LBL_result"
                android:src="@drawable/user_girl"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>