<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#355A41"
    tools:context=".Top_Ten_Screen">

        <ImageView
            android:id="@+id/top10_IMG_back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/top10_LBL_top10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:shadowColor="#040D43"
            android:shadowDx="13"
            android:shadowDy="13"
            android:shadowRadius="2"
            android:text="@string/top_10"
            android:textColor="#DF1526"
            android:textSize="60sp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top10_LBL_top10"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/top10_LAY_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/top10_LAY_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
</RelativeLayout>