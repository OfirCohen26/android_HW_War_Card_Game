<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game_Over_Screen"
    android:background="#355A41"

    >
    <LinearLayout
        android:id="@+id/gameOver_LAY_GameOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/gameOver_IMG_VIEW_gameOver"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/game_over"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameOver_LAY_NewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gameOver_LAY_GameOver"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/gameOver_LAY_NewGameWithText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/gameOver_LBL_newGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#355A41"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:text="@string/back_to_menu" />

        <ImageView
            android:id="@+id/gameOver_BTN_newGame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:src="@drawable/back"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameOver_LAY_TheWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/gameOver_LAY_NewGame"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/gameOver_LBL_theWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#355A41"
            android:textColor="#FF0000"
            android:textSize="50sp"
            />
    </LinearLayout>


</RelativeLayout>